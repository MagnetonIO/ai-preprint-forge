# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview  # Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo

# GitHub Configuration
GITHUB_TOKEN=your_github_token
GITHUB_USERNAME=your_github_username

# GitHub Repo Settings
MAKE_REPO_PUBLIC=true

# Global Social Media Settings
ENABLE_SOCIAL_MEDIA=false        # Master switch for all social media
SOCIAL_POST_DELAY=300           # Delay between posts in seconds

# Twitter/X Configuration
AUTO_POST_TWITTER=false         # Enable Twitter posting
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn Configuration
AUTO_POST_LINKEDIN=false        # Enable LinkedIn posting
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Facebook Page Posting
FACEBOOK_POST_TO_PAGE=false                         # Must be true to enable posting
FACEBOOK_PAGE_ID=your_page_id                      # Your Facebook page ID
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token  # The token from Graph Explorer

# Directory Configuration
BASE_DIRECTORY=ai_preprints
TEMPLATES_DIRECTORY=templates

# Paper Generation Settings
PAPER_MIN_WORDS=2000
PAPER_MAX_WORDS=5000
INCLUDE_CITATIONS=true
GENERATE_FIGURES=true
PAPER_AUTHOR="John Doe"
PAPER_INSTITUTION="University of Natural Studies"
PAPER_DEPARTMENT="Department of Axioms"
PAPER_EMAIL="johndoe@uns.edu"

# Default Output Formats
CREATE_MARKDOWN_BY_DEFAULT=true
CREATE_LATEX_BY_DEFAULT=true

# GitHub Pages Settings
ENABLE_GITHUB_PAGES=false
USE_CUSTOM_DOMAIN=false
CUSTOM_DOMAIN=your-domain.com
